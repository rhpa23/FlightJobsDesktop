<UserControl x:Class="FlightJobsDesktop.Views.Modals.AlternativeTipsModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightJobsDesktop.Views.Modals"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="65"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid HorizontalAlignment="Left" Height="200" Margin="10" Grid.Row="0" VerticalAlignment="Top" Width="600" Grid.ColumnSpan="3"/>
        <Label Content="Range" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <TextBox Name="TxtAlternativeRange" Grid.Row="1" Grid.Column="1" Width="120" Height="30" HorizontalAlignment="Left"  PreviewTextInput="TxtAlternativeRange_PreviewTextInput"/>
        <Button Content="Update" Width="65" Height="35" Padding="0" Margin="10" Grid.Row="1" Grid.Column="2" VerticalAlignment="Bottom"  HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
