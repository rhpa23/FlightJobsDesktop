<UserControl x:Class="FlightJobsDesktop.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="80"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        
        <Image Grid.ColumnSpan="3" Source="/img/logo/FlightJobsLogo0004.png" HorizontalAlignment="Center" Margin="0,20,0,10" />

        <TextBlock Text="This application was created in 2018 for personal and shared freely with the MS Flight Simulator community. The objective is to improve the simulation experience from the point of view of the Pilots. Simulate pilot's work, earning virtual money and experience to be hired by an airline company."
                   Grid.Row="1"
                   FontSize="16"
                   Margin="20,0,20,0"
                   TextWrapping="Wrap"
                   Grid.ColumnSpan="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

        <TextBlock Text="The web version can be accessed through these links:"
                   Grid.Row="2"
                   FontSize="16"
                   Margin="20,0,20,0"
                   TextWrapping="Wrap"
                   Grid.ColumnSpan="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

        <TextBlock Grid.Row="3" Grid.ColumnSpan="3" HorizontalAlignment="Center" Cursor="Hand">
            <Hyperlink NavigateUri="https://flightjobs.bsite.net" RequestNavigate="WebLink_RequestNavigate">
                https://flightjobs.bsite.net
            </Hyperlink>
        </TextBlock>
        <TextBlock Grid.Row="4" Grid.ColumnSpan="3" HorizontalAlignment="Center" Cursor="Hand">
            <Hyperlink NavigateUri="https://www.flightjobs.somee.com" RequestNavigate="WebLink_RequestNavigate">
                https://www.flightjobs.somee.com
            </Hyperlink>
        </TextBlock>
        <TextBlock Grid.Row="5" Grid.ColumnSpan="3" HorizontalAlignment="Center" Cursor="Hand">
            <Hyperlink NavigateUri="http://flightjobs2027-001-site1.htempurl.com" RequestNavigate="WebLink_RequestNavigate">
                http://flightjobs2027-001-site1.htempurl.com
            </Hyperlink>
        </TextBlock>

        <TextBlock Text="If you liked it, please consider a donate any value using the PayPal button below:"
                   Grid.Row="6"
                   FontSize="16"
                   Margin="20,0,20,0"
                   TextWrapping="Wrap"
                   Grid.ColumnSpan="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

        <Border Grid.Row="7" Grid.ColumnSpan="3" Padding="3" Style="{DynamicResource BorderHighlight}" HorizontalAlignment="Center" Cursor="Hand">
            <TextBlock>
            <Hyperlink NavigateUri="https://www.paypal.com/donate?token=rszsrlaX6Ior-8BYher1_Y55EshCBF6v42XzyOGKXS9WCo9FGR5kTSqBxYmwYaRkSb-ufOHjseJ9QpA4" RequestNavigate="WebLink_RequestNavigate">
                <Image Width="190" ToolTip="PayPal - The safer, easier way to pay online!"
                       Source="/img/logo/btn_donateCC_LG.gif" />        
            </Hyperlink>
            </TextBlock>
        </Border>

        <TextBlock Text="For support, to contact the developers and news follow FlightJobs channels:"
                   Grid.Row="8"
                   FontSize="16"
                   Margin="20,0,20,0"
                   TextWrapping="Wrap"
                   Grid.ColumnSpan="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

        <Border Grid.Row="9" Grid.Column="0" Padding="3" Style="{DynamicResource BorderHighlight}" HorizontalAlignment="Right" Cursor="Hand">
            <TextBlock>
            <Hyperlink NavigateUri="https://discordapp.com/invite/xmpAWz7" RequestNavigate="WebLink_RequestNavigate">
                <Image Source="/img/icons/discordapp.png" />
            </Hyperlink>
            </TextBlock>
        </Border>
        <Border Grid.Row="9" Grid.Column="1" Padding="3" Style="{DynamicResource BorderHighlight}" HorizontalAlignment="Center" Cursor="Hand">
            <TextBlock>
            <Hyperlink NavigateUri="https://fb.me/rhpa23" RequestNavigate="WebLink_RequestNavigate">
                <Image Source="/img/icons/fb.png" />
            </Hyperlink>
            </TextBlock>
        </Border>
        <Border Grid.Row="9" Grid.Column="2" Padding="3" Style="{DynamicResource BorderHighlight}" HorizontalAlignment="Left" Cursor="Hand">
            <TextBlock>
            <Hyperlink NavigateUri="https://www.youtube.com/channel/UCBHN8OG2yilRq3SrxAGaIaw" RequestNavigate="WebLink_RequestNavigate">
                <Image Source="/img/icons/youtube.png" />
            </Hyperlink>
            </TextBlock>
        </Border>


    </Grid>
</UserControl>
